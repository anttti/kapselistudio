<div class="flex flex-col gap-8">
  <div class="flex justify-between">
    <h1 class="text-2xl"><%= @user.email %></h1>
  </div>

  <.panel>
    <.form let={f} for={@changeset} id="user-form" phx-change="validate" phx-submit="save">
      <%= text_input(f, :email, class: "input") %>
      <%= error_tag(f, :email) %>
    </.form>
  </.panel>
</div>
